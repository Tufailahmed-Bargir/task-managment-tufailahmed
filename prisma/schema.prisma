 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
   
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String
  priority    String
  due_date    DateTime? @map("dueDate") // Use DateTime for better date handling

}
